@test "[perf-tools/Scalasca] MPI FORTRAN binary runs under resource manager ($rm/$LMOD_FAMILY_COMPILER/$LMOD_FAMILY_MPI)" {
    if [ ! -s F_test ];then
	flunk "F_test binary does not exit"
    fi

    run_mpi_binary -s ./F_test
    assert_success

    run scalasca -examine -s scorep_F_test_16_sum
    assert_success

    rm -rf scorep_F_test_16_sum
}
