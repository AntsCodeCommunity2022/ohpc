#!../../../common/bats/bin/bats
# -*-sh-*-

load ../../../common/test_helper_functions || exit 1
source ../../../common/functions || exit 1

if [ -s ../../../TEST_ENV ];then
    source ../../../TEST_ENV
fi

if [ "$RESOURCE_MANAGER" = "slurm" ];then
    rm=slurm
else
    ERROR "Unsupported or unknown resource manager"
    exit 1
fi

NODES=16
TASKS=16
ARGS=16

@test "[perf-tools/Scalasca] MPI C binary runs under resource manager ($rm/$LMOD_FAMILY_COMPILER/$LMOD_FAMILY_MPI)" {
    if [ ! -s C_mpi_test ];then
	flunk "C_mpi_test binary does not exit"
    fi

    run_mpi_binary -s 1 ./C_mpi_test $ARGS $NODES $TASKS
    assert_success

    run scalasca -examine -s scorep_C_mpi_test_16_sum
    assert_success

    rm -rf scorep_C_mpi_test_16_sum
}

@test "[perf-tools/Scalasca] MPI C++ binary runs under resource manager ($rm/$LMOD_FAMILY_COMPILER/$LMOD_FAMILY_MPI)" {
    if [ ! -s CXX_mpi_test ];then
	flunk "CXX_mpi_test binary does not exit"
    fi

    run_mpi_binary -s 1 ./CXX_mpi_test $ARGS $NODES $TASKS
    assert_success

    run scalasca -examine -s scorep_CXX_mpi_test_16_sum
    assert_success

    rm -rf scorep_CXX_mpi_test_16_sum
}

